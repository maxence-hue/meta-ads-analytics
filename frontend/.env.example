# API Backend
NEXT_PUBLIC_API_URL=https://your-backend-domain.com/api/v1
NEXT_PUBLIC_WS_URL=wss://your-backend-domain.com

# Meta Ads Configuration
NEXT_PUBLIC_META_APP_ID=your_meta_app_id

# App Configuration
NEXTAUTH_URL=https://your-frontend-domain.com
NEXTAUTH_SECRET=change-this-to-a-random-secret-in-production
NEXT_PUBLIC_APP_NAME=Meta Ads Analytics
NEXT_PUBLIC_APP_VERSION=1.0.0

# Analytics Configuration
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ANALYTICS_REFRESH_INTERVAL=300000

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_ANALYSIS=true
NEXT_PUBLIC_ENABLE_REAL_TIME_SYNC=true
NEXT_PUBLIC_ENABLE_EXPORT=true

# URLs de redirection
NEXT_PUBLIC_SUCCESS_URL=https://your-frontend-domain.com/analytics/connect/success
NEXT_PUBLIC_ERROR_URL=https://your-frontend-domain.com/analytics/connect/error

# Stripe (optionnel)
NEXT_PUBLIC_STRIPE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Google Analytics (optionnel)
NEXT_PUBLIC_GA_ID=G-...

# Development
NEXT_PUBLIC_DEV_MODE=false
NEXT_PUBLIC_DEBUG_MODE=false

# Limits
NEXT_PUBLIC_MAX_FILE_SIZE=50mb
NEXT_PUBLIC_MAX_UPLOAD_FILES=10

# Theme
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Localization
NEXT_PUBLIC_DEFAULT_LANGUAGE=fr
NEXT_PUBLIC_ENABLE_I18N=true
