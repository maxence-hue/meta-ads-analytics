# Environment
NODE_ENV=production
PORT=5001
FRONTEND_URL=https://your-frontend-domain.com

# Database PostgreSQL avec TimescaleDB
DATABASE_URL=postgresql://postgres:password@localhost:5432/meta_ads_analytics
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=meta_ads_analytics
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# AI Image Generation APIs
NEOBANANA_API_KEY=your_neobanana_key_here
OPENAI_API_KEY=your_openai_key_here
STABILITY_API_KEY=your_stability_key_here
IDEOGRAM_API_KEY=your_ideogram_key_here
LEONARDO_API_KEY=your_leonardo_key_here
DALLE_API_KEY=your_dalle_key_here

# Meta Ads API
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_REDIRECT_URI=https://your-domain.com/api/v1/meta/callback

# Google Vision API
GOOGLE_VISION_API_KEY=your_google_vision_api_key
GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account.json

# Cloudinary (CDN et stockage images)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Web Scraping APIs
SCRAPERAPI_KEY=your_scraperapi_key
BRIGHTDATA_KEY=your_brightdata_key

# Security
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your_32_character_encryption_key

# External Services
REMOVE_BG_API_KEY=your_removebg_key
COLOR_API_KEY=your_color_api_key
FONT_API_KEY=your_font_api_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AI_MAX=20
RATE_LIMIT_SCRAPING_MAX=10

# Job Queue
BULL_QUEUE_CONCURRENCY=5
JOB_TIMEOUT_MS=300000

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Puppeteer
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox

# Performance
MAX_IMAGE_SIZE_MB=10
MAX_UPLOAD_SIZE_MB=50
IMAGE_QUALITY=90

# Features Flags
ENABLE_AI_GENERATION=true
ENABLE_WEB_SCRAPING=true
ENABLE_ANALYTICS=true
ENABLE_WEBSOCKET=true
