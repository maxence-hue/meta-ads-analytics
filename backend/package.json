{
  "name": "meta-ads-generator-backend",
  "version": "1.0.0",
  "description": "Backend API professionnel pour la génération de créatives Meta Ads avec IA",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --coverage",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "seed": "node scripts/seed.js",
    "docker:postgres": "docker run -d --name meta-ads-postgres -e POSTGRES_PASSWORD=password -e POSTGRES_DB=meta_ads_generator -p 5432:5432 postgres:15",
    "docker:redis": "docker run -d --name meta-ads-redis -p 6379:6379 redis:7-alpine",
    "docker:up": "npm run docker:postgres && npm run docker:redis",
    "lint": "eslint src/**/*.js"
  },
  "keywords": ["meta", "ads", "ai", "creative", "generator"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "bull": "^4.11.4",
    "socket.io": "^4.6.2",
    "puppeteer": "^21.5.2",
    "sharp": "^0.33.0",
    "cloudinary": "^1.41.0",
    "axios": "^1.6.2",
    "joi": "^17.11.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "multer": "^1.4.5-lts.1",
    "cheerio": "^1.0.0-rc.12",
    "openai": "^4.20.0",
    "rate-limiter-flexible": "^3.0.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "multer-storage-cloudinary": "^4.0.0",
    "node-pg-migrate": "^6.2.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0"
  }
}
