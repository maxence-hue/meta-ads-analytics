# Environment
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:8001

# Mode MOCK (pour tester sans PostgreSQL/Redis)
MOCK_MODE=false

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/meta_ads_generator
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=meta_ads_generator
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# AI Image Generation APIs
# NEOBANANA_API_KEY=your_neobanana_key_here
OPENAI_API_KEY=sk-your-key-here
# STABILITY_API_KEY=your_stability_key_here
# IDEOGRAM_API_KEY=your_ideogram_key_here
# LEONARDO_API_KEY=your_leonardo_key_here

# Cloudinary (CDN et stockage images)
CLOUDINARY_CLOUD_NAME=demo
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Security
JWT_SECRET=dev_secret_key_change_in_production
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=dev_encryption_key_32_characters

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AI_MAX=20
RATE_LIMIT_SCRAPING_MAX=10

# Job Queue
BULL_QUEUE_CONCURRENCY=5
JOB_TIMEOUT_MS=300000

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Performance
MAX_IMAGE_SIZE_MB=10
MAX_UPLOAD_SIZE_MB=50
IMAGE_QUALITY=90

# Features Flags
ENABLE_AI_GENERATION=true
ENABLE_WEB_SCRAPING=true
ENABLE_ANALYTICS=true
ENABLE_WEBSOCKET=true
